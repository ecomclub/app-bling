  "admin_settings": {
    "bling_api_key": {
      "schema": {
        "type": "string",
        "maxLength": 255,
        "title": "Bling Api KEY",
        "description": "Chave de acesso para recursos da API"
      },
      "hide": true
    },
    "bling_loja_id": {
      "schema": {
        "type": "number",
        "multipleOf": 0.0001,
        "minimum": -99999999,
        "maximum": 99999999,
        "title": "Id da Loja",
        "description": "Configuração opcional, caso informado, todos os produtos enviados da E-Com Plus para o Bling serão viculados a loja informada."
      },
      "hide": true
    },
    "synchronize": {
      "schema": {
        "type": "object",
        "title": "Sincronização entre os serviços",
        "required": [
          "ecomplus",
          "bling"
        ],
        "properties": {
          "ecomplus": {
            "type": "object",
            "title": "Configurações E-Com Plus",
            "description": "Configuração de sincronizações da E-Com Plus",
            "required": [
              "products",
              "orders"
            ],
            "properties": {
              "products": {
                "type": "object",
                "title": "Sincronização de produtos",
                "description": "Defina como os produtos serão mantidos entre as plataformas",
                "required": [
                  "all",
                  "ids",
                  "auto"
                ],
                "properties": {
                  "all": {
                    "type": "boolean",
                    "title": "Sincronizar todos os produtos",
                    "description": "Enviar todos os produtos da E-Com Plus pra o Bling",
                    "default": false
                  },
                  "ids": {
                    "type": "array",
                    "title": "Sincronizar IDs de produtos",
                    "description": "Sincronizar apenas os produtos informados"
                  },
                  "auto": {
                    "type": "boolean",
                    "title": "Sincronização automática",
                    "description": "Sincronizar novos produtos automaticamente para o Bling",
                    "default": false
                  }
                }
              },
              "orders": {
                "type": "object",
                "title": "Sincronização de pedidos",
                "description": "Denina como os pedidos serão mantindos entre as plataformas",
                "required": [
                  "all",
                  "ids",
                  "auto"
                ],
                "properties": {
                  "all": {
                    "type": "boolean",
                    "title": "Sincronizar todos os pedidos",
                    "description": "Enviar todos os pedidos da E-Com Plus para o Bling",
                    "default": false
                  },
                  "ids": {
                    "type": "array",
                    "title": "Sincronizar Ids de pedidos",
                    "description": "Sincronizar apenas os pedidos informados"
                  },
                  "auto": {
                    "type": "boolean",
                    "title": "Sincronização automática",
                    "description": "Sincronizar novos pedidos automaticamente para o Bling",
                    "default": false
                  }
                }
              }
            }
          },
          "bling": {
            "type": "object",
            "title": "Configurações Bling",
            "description": "Configuralçies de sincronizações do Bling",
            "required": [
              "products",
              "financial_status",
              "invoices",
              "shipping_lines"
            ],
            "properties": {
              "products": {
                "type": "boolean",
                "title": "Produtos",
                "description": "Atualizar estoque de produtos na E-Com Plus sempre que for alterado no Bling",
                "default": false
              },
              "financial_status": {
                "type": "boolean",
                "title": "Situação de Pedidos",
                "description": "Atualizar situação do pedido na E-Com Plus sempre que for alterado no Bling",
                "default": false
              },
              "invoices": {
                "type": "boolean",
                "title": "Notas Fiscais",
                "description": "Atualizar informações referente a notas fiscais sempre que forem emitidas no Bling e viculadas ao pedido",
                "default": false
              },
              "shipping_lines": {
                "type": "boolean",
                "title": "Códigos de Rastreio",
                "description": "Atualizar informações sobre código de rastreio dos pedidos",
                "default": false
              }
            }
          }
        }
      },
      "hide": false
    }
  }
}